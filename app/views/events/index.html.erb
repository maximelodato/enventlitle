<h1>Liste des Événements</h1>

<%= link_to 'Créer un Nouvel Événement', new_event_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Date de début</th>
      <th>Durée</th>
      <th>Prix</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.start_date.strftime("%d/%m/%Y à %H:%M") %></td>
        <td><%= event.duration %> heures</td>
        <td><%= number_to_currency(event.price) %></td>
        <td>
          <%= link_to 'Voir', event_path(event), class: 'btn btn-info' %>
          <%= link_to 'Éditer', edit_event_path(event), class: 'btn btn-warning' %>
          <%= link_to 'Supprimer', event_path(event), method: :delete, data: { confirm: 'Êtes-vous sûr?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
