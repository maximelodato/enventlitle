<div class="container mt-4">
  <h2>Connexion</h2>
  <%= form_with scope: :session, url: login_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :email, "Adresse Email" %>
      <%= form.email_field :email, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :password, "Mot de Passe" %>
      <%= form.password_field :password, class: 'form-control', required: true %>
    </div>

    <div class="actions">
      <%= form.submit "Se connecter", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <% unless user_signed_in? %> <!-- Vérifiez si l'utilisateur n'est pas déjà connecté -->
    <%= link_to 'Inscription', signup_path, class: 'btn btn-link' %>
  <% end %>
</div>
